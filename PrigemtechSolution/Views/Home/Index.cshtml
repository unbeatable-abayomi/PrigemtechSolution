@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Home Page";
  
}


    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>



        <div class="container">


            <div class="row">


                <div class="card-deck">

                    @foreach (var employee in Model)
                    {
                        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");
                    <div class="col-md-3">


                        <div class="card m-3">
                            <div class="card-header">
                                <h3>@employee.Name</h3>
                            </div>
                            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                            <div class="card-footer text-center">
                                <a asp-controller="Home" asp-action="Details" asp-route-Id="@employee.Id" class="btn btn-primary">View</a>
                                <a asp-controller="Home" asp-action="Edit" asp-route-Id="@employee.Id" class="btn btn-primary">Edit</a>
                                <a herf="#" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                    }

                </div>
            </div>
        </div>
    </div>
